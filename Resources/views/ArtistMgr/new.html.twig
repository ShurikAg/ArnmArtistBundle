{% extends 'ArnmAraneumBundle::araneum.html.twig' %}

{% form_theme form 'ArnmAraneumBundle:Form:araneum.html.twig' %}

{% block sidebar %}
	<div class="alert alert-info hint">
		<span class="label label-info">{{ 'default.label.info'|trans }}</span><br/>
  		{{ 'artist.new.info'|trans({}, 'artist')|raw }}
	</div>
{% endblock %}

{% block title %}
	{{ parent() }} | {{ 'artist.form.title.new'|trans({}, 'artist') }}
{% endblock %}

{% block content %}
	<div class="page-header">
		<h2>{{ 'artist.form.title.new'|trans({}, 'artist') }}</h2>
	</div>
	
	{% include 'ArnmAraneumBundle:Misc:messages.html.twig' %}
	
	{% if form %}
		<form action="{{ path('arnm_artist_new') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
			{{ form_widget(form) }}
			<div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
			    	<input class="btn btn-primary" type="submit" value="{{ 'artist.form.action.create'|trans({}, 'artist') }}"/>
			    	<input class="btn" type="reset" value="{{ 'default.form.action.reset'|trans }}"/>
			    	<a  class="btn" href="{{ path('arnm_artists') }}">{{ 'default.form.action.back_to_list'|trans }}</a>
		        </div>
            </div>
		</form>
	{% endif%}
{% endblock %}
