{% extends 'ArnmAraneumBundle::araneum.html.twig' %}

{% block title %}
	{{ parent() }} | {{ 'artists.list.title'|trans({}, 'artist') }}
{% endblock %}

{% block sidebar %}
	<div class="alert alert-info hint">
		<span class="label label-info">{{ 'default.label.info'|trans }}</span><br/>
  		{{ 'artists.list.info'|trans({}, 'artist')|raw }}
	</div>
{% endblock %}
 
{% block content %}
	<div class="page-header">
		<h2>{{ 'artists.list.title'|trans({}, 'artist') }}</h2>
	</div>
	
	{% include 'ArnmAraneumBundle:Misc:messages.html.twig' %}
	<div class="table-responsive">
    	<table class="table table-hover">
    	    <thead>
    	        <tr>
    	            <th>#</th>
    	            <th>{{ 'artists.list.table.head.name'|trans({}, 'artist') }}</th>
    	            <th>{{ 'artists.list.table.head.slug'|trans({}, 'artist') }}</th>
    	            <th>{{ 'artists.list.table.head.active'|trans({}, 'artist') }}</th>
    	            <th>{{ 'default.label.actions'|trans }}</th>
    	        </tr>
    	    </thead>
    	    <tbody>
    	    {% for entity in entities %}
    	        <tr>
    	            <td>{{ entity.id }}</td>
    	            <td>{{ entity.name }}</td>
    	            <td>{{ entity.slug }}</td>
    	            <td>
    	            	{% if entity.active %}
    	            		<span class="glyphicon glyphicon-ok"></span>
    	            	{% else %}
    	            		<span class="glyphicon glyphicon-remove"></span>
    	            	{% endif %}
                	</td>
    	            <td>
    	            	<a href="{{ path('arnm_artist_edit', { 'id': entity.id }) }}" class="btn btn-default">{{ 'default.label.edit'|trans }}</a>
    	            	<a href="{{ path('arnm_artist_delete', { 'id': entity.id }) }}" class="btn btn-danger delete-confirm">{{ 'default.label.delete'|trans }}</a>
    	            </td>
    	        </tr>
    	    {% endfor %}
    	    </tbody>
    	</table>
	</div>
	<div class="well">
	    <a href="{{ path('arnm_artist_new') }}" class="btn btn-primary">
	        {{ 'artists.list.action.create_new'|trans({}, 'artist') }}
	    </a>
    </div>
{% endblock %}
